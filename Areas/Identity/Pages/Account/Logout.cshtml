@page
@model LogoutModel
@{
    ViewData["Title"] = "Session Termination";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border-bottom pb-3 mb-5 text-center">
                <h1 class="fw-bold text-uppercase" style="letter-spacing: 4px;">@ViewData["Title"]</h1>
                <p class="text-muted small text-uppercase">Archival Exit Protocol</p>
            </div>

            <div class="text-center">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <div class="bg-light p-5 border mb-4">
                        <h2 class="fw-bold text-uppercase mb-3" style="font-size: 1rem; letter-spacing: 1px;">Are you sure?</h2>
                        <p class="small text-muted mb-4 text-uppercase">Confirming will end your current institutional session.</p>
                        
                        <form id="logout-form" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-dark rounded-0 fw-bold text-uppercase py-3 px-5 mb-3 w-100" style="font-size: 0.85rem; letter-spacing: 2px;">Confirm Logout</button>
                        </form>
                        
                        <div class="mt-2">
                            <a asp-area="" asp-page="/Index" class="text-dark small text-uppercase fw-bold" style="text-decoration: underline; font-size: 0.7rem;">Cancel and Return</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="py-5">
                        <p class="fw-bold text-uppercase" style="letter-spacing: 1px;">Session ended.</p>
                        <p class="text-muted small text-uppercase mb-4">You are no longer authorized in this section.</p>
                        <a asp-page="./Login" class="btn btn-outline-dark rounded-0 fw-bold text-uppercase py-2 px-4" style="font-size: 0.75rem;">Return to Login</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>