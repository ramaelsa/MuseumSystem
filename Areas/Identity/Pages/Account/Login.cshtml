@page
@model LoginModel
@{
    ViewData["Title"] = "Institutional Access";
}

<div class="container mt-5">
    <div class="border-bottom pb-3 mb-5 text-center">
        <h1 class="fw-bold text-uppercase" style="letter-spacing: 4px;">@ViewData["Title"]</h1>
        <p class="text-muted small text-uppercase">Enter your Museum Core credentials to proceed</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-5">
            <section>
                <form id="account" method="post">
                    <h2 class="fw-bold text-uppercase mb-4" style="font-size: 1rem; letter-spacing: 1px;">Secure Login</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label small fw-bold text-uppercase">Institutional Email</label>
                        <input asp-for="Input.Email" class="form-control rounded-0 border-dark shadow-none" autocomplete="username" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label small fw-bold text-uppercase">Security Key</label>
                        <input asp-for="Input.Password" class="form-control rounded-0 border-dark shadow-none" autocomplete="current-password" />
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input rounded-0 border-dark" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label small text-uppercase fw-bold">Keep me authorized</label>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-dark rounded-0 fw-bold text-uppercase py-3 mb-4" style="font-size: 0.85rem; letter-spacing: 2px;">Authorize Access</button>

                    <div class="text-center border-top pt-4">
                        <p class="small text-muted mb-3 text-uppercase" style="font-size: 0.65rem;">No existing credentials?</p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-dark rounded-0 w-100 fw-bold text-uppercase mb-4" style="font-size: 0.75rem;">Create New Enrollment</a>
                        
                        <div class="d-flex justify-content-between border-top pt-3">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-dark small text-uppercase fw-bold" style="text-decoration: underline; font-size: 0.65rem;">Recovery Key</a>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-dark small text-uppercase fw-bold" style="text-decoration: underline; font-size: 0.65rem;">Resend Verification</a>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>