@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Credential Recovery";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="border-bottom pb-3 mb-5 text-center">
                <h1 class="fw-bold text-uppercase" style="letter-spacing: 4px;">@ViewData["Title"]</h1>
                <p class="text-muted small text-uppercase">Enter your email to reset your security key</p>
            </div>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger small mb-3" role="alert"></div>
                <div class="mb-4">
                    <label asp-for="Input.Email" class="form-label small fw-bold text-uppercase">Institutional Email</label>
                    <input asp-for="Input.Email" class="form-control rounded-0 border-dark shadow-none" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                <button type="submit" class="w-100 btn btn-dark rounded-0 fw-bold text-uppercase py-3" style="font-size: 0.85rem;">Request Reset Link</button>
            </form>
            
            <div class="text-center mt-4">
                <a asp-page="./Login" class="text-dark small text-uppercase fw-bold" style="text-decoration: none; font-size: 0.7rem;">← Back to Access</a>
            </div>
        </div>
    </div>
</div>