@page
@model RegisterModel
@{
    ViewData["Title"] = "Institutional Enrollment";
}

<div class="container mt-5">
    <div class="border-bottom pb-3 mb-5 text-center">
        <h1 class="fw-bold text-uppercase" style="letter-spacing: 4px;">@ViewData["Title"]</h1>
        <p class="text-muted small text-uppercase">Create your Museum Core digital credentials</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-5">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="fw-bold text-uppercase mb-4" style="font-size: 1rem; letter-spacing: 1px;">Account Details</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>
                
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label small fw-bold text-uppercase">Email Address</label>
                    <input asp-for="Input.Email" class="form-control rounded-0 border-dark shadow-none" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label small fw-bold text-uppercase">Password</label>
                    <input asp-for="Input.Password" class="form-control rounded-0 border-dark shadow-none" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.ConfirmPassword" class="form-label small fw-bold text-uppercase">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control rounded-0 border-dark shadow-none" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-dark rounded-0 fw-bold text-uppercase py-3" style="font-size: 0.85rem; letter-spacing: 2px;">Register Account</button>
            </form>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="mt-5 pt-4 border-top text-center">
                    <p class="small text-muted text-uppercase fw-bold mb-3">Institutional Access Providers</p>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-dark rounded-0 fw-bold text-uppercase mb-2 mx-1" name="provider" value="@provider.Name">@provider.DisplayName</button>
                        }
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}