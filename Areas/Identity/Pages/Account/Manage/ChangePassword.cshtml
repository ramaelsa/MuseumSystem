@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Update Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="fw-bold text-uppercase mb-4" style="font-size: 1.2rem; letter-spacing: 1px;">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-4" role="alert"></div>
            
            <div class="mb-3">
                <label asp-for="Input.OldPassword" class="form-label small fw-bold text-uppercase">Current Password</label>
                <input asp-for="Input.OldPassword" class="form-control rounded-0 border-dark shadow-none" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.NewPassword" class="form-label small fw-bold text-uppercase">New Password</label>
                <input asp-for="Input.NewPassword" class="form-control rounded-0 border-dark shadow-none" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.ConfirmPassword" class="form-label small fw-bold text-uppercase">Confirm New Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control rounded-0 border-dark shadow-none" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-dark rounded-0 px-5 fw-bold text-uppercase btn-lg" style="font-size: 0.8rem;">Change Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}