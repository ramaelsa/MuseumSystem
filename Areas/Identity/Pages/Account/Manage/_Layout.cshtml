@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}

<div class="container mt-5">
    <div class="border-bottom pb-3 mb-5">
        <h1 class="fw-bold text-uppercase" style="letter-spacing: 2px;">Account Settings</h1>
        <p class="text-muted small text-uppercase">Manage your profile and security preferences</p>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card border-0 rounded-0 bg-light p-2">
                <partial name="_ManageNav" />
            </div>
        </div>
        <div class="col-md-9 px-md-5">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}