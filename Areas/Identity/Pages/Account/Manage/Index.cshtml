@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="fw-bold text-uppercase mb-4" style="font-size: 1.2rem; letter-spacing: 1px;">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>
            
            <div class="mb-3">
                <label asp-for="Username" class="form-label small fw-bold text-uppercase">Username</label>
                <input asp-for="Username" class="form-control rounded-0 border-dark bg-light" disabled />
            </div>

            <div class="mb-4">
                <label asp-for="Input.PhoneNumber" class="form-label small fw-bold text-uppercase">Phone Number</label>
                <input asp-for="Input.PhoneNumber" class="form-control rounded-0 border-dark shadow-none" placeholder="Enter contact number" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-dark rounded-0 px-5 fw-bold text-uppercase btn-lg" style="font-size: 0.8rem;">Save Profile</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}