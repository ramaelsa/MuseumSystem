@model MuseumSystem.Models.Exhibit

@{
    ViewData["Title"] = "Remove Exhibit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-6">
            <div class="card border-0 shadow rounded-0 p-5">
                <i class="bi bi-exclamation-triangle text-danger display-1 mb-4"></i>
                <h2 class="fw-bold text-uppercase">De-accessioning</h2>
                <p class="text-muted">Are you sure you want to remove this piece from the permanent collection?</p>
                
                <div class="my-4 p-4 bg-light border">
                    <h5 class="fw-bold mb-1">@Model.Name</h5>
                    <p class="small text-muted mb-0">By @Model.Artist?.FullName</p>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger rounded-0 px-5 py-2 fw-bold text-uppercase small">Confirm Deletion</button>
                    <div class="mt-3">
                        <a asp-action="Index" class="text-secondary small text-decoration-none fw-bold text-uppercase">Return to Gallery</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>