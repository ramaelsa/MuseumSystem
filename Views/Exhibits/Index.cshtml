@model IEnumerable<MuseumSystem.Models.Exhibit>

@{
ViewData["Title"] = "Gallery";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-5 fw-bold mb-0">Museum Gallery</h1>
            <p class="text-muted text-uppercase small ls-2" style="letter-spacing: 2px;">Current Collections</p>
        </div>

        @if (User.IsInRole("Admin"))
        {
        <a asp-action="Create" class="btn btn-dark rounded-0 px-4 py-2 fw-bold text-uppercase small">
            <i class="bi bi-plus-lg me-2"></i> Register New Exhibit
        </a>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
        <div class="col">
            <div class="card h-100 shadow-sm border-0 rounded-0">
                <div class="bg-light text-dark d-flex align-items-center justify-content-center border-bottom" style="height: 250px;">
                    <span class="text-uppercase fw-light small" style="letter-spacing: 4px;">@item.Name</span>
                </div>

                <div class="card-body d-flex flex-column p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="fw-bold text-uppercase mb-0" style="font-size: 1rem;">@item.Name</h5>
                        @if (item.IsActive)
                        {
                        <span class="badge rounded-0 border text-dark fw-normal" style="font-size: 0.65rem;">AVAILABLE</span>
                        }
                    </div>

                    <p class="text-muted small mb-3">Artisan: @item.Artist?.FullName</p>

                    <p class="card-text text-truncate-3 flex-grow-1 small text-secondary" style="line-height: 1.6;">
                        @item.Description
                    </p>

                    <div class="mt-4 pt-3 border-top d-flex justify-content-between align-items-center">
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-dark fw-bold text-decoration-none small text-uppercase" style="letter-spacing: 1px;">View Entry</a>

                        @if (User.IsInRole("Admin"))
                        {
                        <div class="d-flex gap-3">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-secondary small"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger small"><i class="bi bi-trash"></i></a>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>

<style>
    .text-truncate-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .card {
        transition: all 0.3s ease;
        border: 1px solid #eee !important;
    }
    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.05) !important;
    }
</style>