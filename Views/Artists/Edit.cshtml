@model MuseumSystem.Models.Artist

@{
    ViewData["Title"] = "Edit Artist - " + Model.FullName;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="border border-dark bg-white shadow-sm p-0">
                <div class="bg-dark text-white p-3 d-flex justify-content-between align-items-center">
                    <h5 class="m-0 text-uppercase fw-bold letter-spacing-2">Edit Artist Records</h5>
                    <span class="badge bg-secondary rounded-0">ID: @Model.Id</span>
                </div>
                
                <form asp-action="Edit" method="post" class="p-4 p-md-5">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4 small"></div>

                    <div class="row g-5">
                        <div class="col-md-4 border-end">
                            <label class="form-label small fw-bold text-uppercase d-block mb-3">Current Portrait</label>
                            <div class="text-center">
                                <img id="imagePreview" src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://placehold.co/400x500?text=No+Image" : Model.ImageUrl)" 
                                     alt="Preview" class="img-fluid border border-dark p-1 mb-3" 
                                     style="max-height: 350px; width: 100%; object-fit: cover;" />
                                <p class="text-muted smallest italic">Live Preview of Image URL</p>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="mb-4">
                                <label asp-for="FullName" class="form-label small fw-bold text-uppercase">Artist Full Name</label>
                                <input asp-for="FullName" class="form-control rounded-0 border-dark form-control-lg" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="ImageUrl" class="form-label small fw-bold text-uppercase">Update Image URL</label>
                                <input asp-for="ImageUrl" id="imageUrlInput" class="form-control rounded-0 border-dark" placeholder="Paste new image link here..." />
                                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Bio" class="form-label small fw-bold text-uppercase">Biography</label>
                                <textarea asp-for="Bio" class="form-control rounded-0 border-dark" rows="8"></textarea>
                                <span asp-validation-for="Bio" class="text-danger small"></span>
                            </div>

                            <div class="d-flex gap-3 mt-5">
                                <button type="submit" class="btn btn-dark rounded-0 px-5 fw-bold">SAVE CHANGES</button>
                                <a asp-action="Index" class="btn btn-outline-dark rounded-0 px-4 fw-bold">DISCARD</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('imageUrlInput').addEventListener('input', function() {
            const preview = document.getElementById('imagePreview');
            const url = this.value;
            if(url) {
                preview.src = url;
            } else {
                preview.src = "https://placehold.co/400x500?text=No+Image";
            }
        });
    </script>
}