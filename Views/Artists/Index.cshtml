@model IEnumerable<MuseumSystem.Models.Artist>

@{
    ViewData["Title"] = "Museum Artists";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 gap-3">
        <div>
            <h1 class="fw-bold text-uppercase mb-0" style="letter-spacing: 3px;">The Masters</h1>
            <p class="text-muted small uppercase">Archival Artist Directory</p>
        </div>

        <div class="d-flex gap-2 align-items-center">
            <form asp-action="Index" method="get" class="d-flex gap-2">
                <div class="input-group">
                    <input type="text" name="searchString" value="@ViewData["SearchString"]" 
                           class="form-control rounded-0 border-dark shadow-none small" 
                           placeholder="Search for a Master..." style="min-width: 250px;">
                    <button class="btn btn-dark rounded-0" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
                @if (!string.IsNullOrEmpty(ViewData["SearchString"]?.ToString()))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-0">Clear</a>
                }
            </form>

            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-dark rounded-0 px-4 fw-bold shadow-sm ms-md-2">
                    <i class="bi bi-plus-lg me-2"></i>ADD NEW
                </a>
            }
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 border border-dashed">
            <i class="bi bi-person-x text-muted display-1"></i>
            <p class="mt-3 text-uppercase fw-bold text-muted">No artists found for "@ViewData["SearchString"]"</p>
            <a asp-action="Index" class="text-dark small fw-bold">RESTORE DIRECTORY</a>
        </div>
    }

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm bg-light rounded-0">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <div style="height: 300px; overflow: hidden;">
                            <img src="@item.ImageUrl" class="card-img-top rounded-0 w-100 h-100" style="object-fit: cover;" alt="@item.FullName">
                        </div>
                    }
                    else
                    {
                        <div class="bg-secondary d-flex align-items-center justify-content-center text-white" style="height: 300px;">
                            <i class="bi bi-person-fill" style="font-size: 4rem;"></i>
                        </div>
                    }
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-3">@item.FullName</h4>
                        <p class="text-muted small" style="line-height: 1.6; height: 4.8em; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">
                            @item.Bio
                        </p>
                    </div>
                    <div class="card-footer bg-white border-0 p-4 pt-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark rounded-0 px-3">
                                VIEW BIOGRAPHY
                            </a>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-link text-secondary text-decoration-none px-2">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-link text-danger text-decoration-none px-2">Delete</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-center mt-5">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @{
                    int currentPage = (int)ViewData["CurrentPage"];
                    int totalPages = (int)ViewData["TotalPages"];
                    var prevDisabled = currentPage <= 1 ? "disabled" : "";
                    var nextDisabled = currentPage >= totalPages ? "disabled" : "";
                }

                <li class="page-item @prevDisabled">
                    <a class="page-link rounded-0 border-dark text-dark shadow-none" 
                       asp-action="Index" 
                       asp-route-pageNumber="@(currentPage - 1)" 
                       asp-route-searchString="@ViewData["SearchString"]">Previous</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link border-dark shadow-none @(i == currentPage ? "bg-dark border-dark text-white" : "text-dark")" 
                           asp-action="Index" 
                           asp-route-pageNumber="@i"
                           asp-route-searchString="@ViewData["SearchString"]">@i</a>
                    </li>
                }

                <li class="page-item @nextDisabled">
                    <a class="page-link rounded-0 border-dark text-dark shadow-none" 
                       asp-action="Index" 
                       asp-route-pageNumber="@(currentPage + 1)"
                       asp-route-searchString="@ViewData["SearchString"]">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<style>
    .border-dashed {
        border-style: dashed !important;
        border-width: 2px !important;
    }
    .page-link:focus {
        box-shadow: none;
    }
</style>