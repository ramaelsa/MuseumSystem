@model IEnumerable<MuseumSystem.Models.Artist>

@{
    ViewData["Title"] = "Museum Artists";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="fw-bold text-uppercase mb-0" style="letter-spacing: 3px;">The Masters</h1>
            <p class="text-muted small uppercase">Archival Artist Directory</p>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-dark rounded-0 px-4 fw-bold shadow-sm">
                <i class="bi bi-plus-lg me-2"></i>ADD NEW ARTIST
            </a>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm bg-light rounded-0">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <div style="height: 300px; overflow: hidden;">
                            <img src="@item.ImageUrl" class="card-img-top rounded-0 w-100 h-100" style="object-fit: cover;" alt="@item.FullName">
                        </div>
                    }
                    else
                    {
                        <div class="bg-secondary d-flex align-items-center justify-content-center text-white" style="height: 300px;">
                            <i class="bi bi-person-fill" style="font-size: 4rem;"></i>
                        </div>
                    }
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-3">@item.FullName</h4>
                        <p class="text-muted small" style="line-height: 1.6; height: 4.8em; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">
                            @item.Bio
                        </p>
                    </div>
                    <div class="card-footer bg-white border-0 p-4 pt-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark rounded-0 px-3">
                                VIEW BIOGRAPHY
                            </a>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-link text-secondary text-decoration-none px-2">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-link text-danger text-decoration-none px-2">Delete</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>