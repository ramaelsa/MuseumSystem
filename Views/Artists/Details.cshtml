@model MuseumSystem.Models.Artist

@{
    ViewData["Title"] = Model.FullName;
}

<div class="container mt-5">
    <div class="row g-5">
        <div class="col-md-5">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.FullName" class="img-fluid shadow-lg border border-dark p-2 bg-white" style="width: 100%; object-fit: cover;" />
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center border border-dark" style="height: 400px;">
                    <i class="bi bi-person-bounding-box text-muted" style="font-size: 4rem;"></i>
                </div>
            }
        </div>

        <div class="col-md-7">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-dark text-uppercase small fw-bold">Collection</a></li>
                    <li class="breadcrumb-item active small text-uppercase" aria-current="page">@Model.FullName</li>
                </ol>
            </nav>

            <h1 class="display-4 fw-bold text-uppercase mb-3" style="letter-spacing: -1px;">@Model.FullName</h1>
            <div class="bg-gold mb-4" style="height: 4px; width: 80px; background-color: #b2945e;"></div>
            
            <div class="artist-bio mb-5" style="font-size: 1.15rem; line-height: 1.8; color: #222; text-align: justify;">
                @Model.Bio
            </div>

            <div class="d-flex gap-2 mb-5">
                <a asp-action="Index" class="btn btn-outline-dark rounded-0 px-4 fw-bold">BACK TO ARTISTS</a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark rounded-0 px-4 fw-bold">EDIT PROFILE</a>
                }
            </div>
        </div>
    </div>

    <hr class="my-5" />

    <div class="works-section mb-5">
        <h2 class="text-uppercase fw-bold mb-4" style="letter-spacing: 2px;">Works by this Artist</h2>
        
        @if (Model.Exhibits != null && Model.Exhibits.Any())
        {
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var exhibit in Model.Exhibits)
                {
                    <div class="col">
                        <div class="card h-100 border-0 rounded-0 shadow-sm overflow-hidden gallery-card">
                            <div style="height: 200px; overflow: hidden; background-color: #f8f9fa;">
                                @if (!string.IsNullOrEmpty(exhibit.ImageUrl))
                                {
                                    <img src="@exhibit.ImageUrl" class="w-100 h-100" style="object-fit: cover;" alt="@exhibit.Name">
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center h-100 border">
                                        <span class="text-uppercase small text-muted">No Preview</span>
                                    </div>
                                }
                            </div>
                            <div class="card-body p-3 border border-top-0">
                                <h6 class="fw-bold text-uppercase mb-1">@exhibit.Name</h6>
                                <p class="text-muted small mb-3 text-truncate">@exhibit.Description</p>
                                <a asp-controller="Exhibits" asp-action="Details" asp-route-id="@exhibit.Id" class="btn btn-sm btn-outline-dark rounded-0 w-100 fw-bold">VIEW PIECE</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="py-5 text-center bg-light border border-dashed">
                <p class="text-muted mb-0">No pieces currently cataloged for this artist.</p>
            </div>
        }
    </div>
</div>

<style>
    .gallery-card {
        transition: transform 0.3s ease;
    }
    .gallery-card:hover {
        transform: translateY(-5px);
    }
</style>