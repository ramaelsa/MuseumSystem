@model MuseumSystem.Models.Artist

@{
    ViewData["Title"] = Model.FullName + " - Biography";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" class="text-dark">Artists</a></li>
            <li class="breadcrumb-item active text-muted" aria-current="page">@Model.FullName</li>
        </ol>
    </nav>

    <div class="row mt-4">
        <div class="col-md-8">
            <h1 class="fw-bold text-uppercase border-bottom pb-3 mb-4" style="letter-spacing: 2px;">
                @Html.DisplayFor(model => model.FullName)
            </h1>
            
            <div class="artist-bio-content mb-5" style="font-size: 1.1rem; line-height: 1.8; color: #333;">
                <h5 class="text-muted small fw-bold text-uppercase mb-3">Biography</h5>
                @Html.DisplayFor(model => model.Bio)
            </div>

            <div class="d-flex align-items-center gap-3">
                <a asp-action="Index" class="btn btn-outline-dark rounded-0 px-4">
                    <i class="bi bi-arrow-left me-2"></i>BACK TO COLLECTION
                </a>

                @* ONLY ADMIN CAN SEE EDIT BUTTON *@
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-dark rounded-0 px-4">
                        <i class="bi bi-pencil-square me-2"></i>EDIT ARTIST
                    </a>
                }
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light border-0 rounded-0 p-4">
                <h6 class="fw-bold text-uppercase small mb-3">Archival Information</h6>
                <p class="small text-muted mb-1">Entry ID: @Model.Id</p>
                <p class="small text-muted">Status: On Display</p>
            </div>
        </div>
    </div>
</div>