@model MuseumSystem.Models.Artist

@{
    ViewData["Title"] = "Create Artist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>Create Artist</h1>
    <h4>New Contributor</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-controller="Artists" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold"></label>
                    <input asp-for="FullName" class="form-control" placeholder="e.g., Caspar David Friedrich" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Bio" class="form-label fw-bold"></label>
                    <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Brief biography..."></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary px-4">Create Artist</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}