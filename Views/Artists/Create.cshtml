@model MuseumSystem.Models.Artist

@{
    ViewData["Title"] = "New Contributor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border border-dark p-5 shadow-sm">
                <h2 class="fw-bold text-uppercase mb-4 text-center">New Contributor</h2>
                
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                    <div class="mb-4">
                        <label asp-for="FullName" class="form-label small fw-bold text-uppercase">Full Artist Name</label>
                        <input asp-for="FullName" class="form-control rounded-0 border-dark" placeholder="e.g. Leonardo da Vinci" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ImageUrl" class="form-label small fw-bold text-uppercase">Profile Image URL</label>
                        <input asp-for="ImageUrl" class="form-control rounded-0 border-dark" placeholder="https://..." />
                        <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Bio" class="form-label small fw-bold text-uppercase">Biography</label>
                        <textarea asp-for="Bio" class="form-control rounded-0 border-dark" rows="6"></textarea>
                        <span asp-validation-for="Bio" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-dark rounded-0 fw-bold py-2">REGISTER ARTIST</button>
                        <a asp-action="Index" class="btn btn-outline-dark rounded-0 fw-bold py-2">CANCEL</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}