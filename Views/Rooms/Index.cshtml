@model IEnumerable<MuseumSystem.Models.Room>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h1 class="fw-bold text-uppercase m-0">Museum Space</h1>
            <p class="text-muted small mb-0 text-uppercase" style="letter-spacing: 1px;">Floor Plan Management</p>
        </div>
        @if (User.IsInRole("Admin")) {
            <a asp-action="Create" class="btn btn-dark rounded-0 px-4 fw-bold small text-uppercase">Add Room</a>
        }
    </div>

    <div class="bg-light p-3 border mb-5">
        <form asp-action="Index" method="get" class="row g-2 align-items-center">
            <div class="col-md-5">
                <div class="form-control rounded-0 border-dark bg-light text-muted">Room directory active</div>
            </div>
            <div class="col-md-4">
                <select name="sortOrder" class="form-select rounded-0 shadow-none border-dark" onchange="this.form.submit()">
                    <option value="">Sort By: Name (A-Z)</option>
                    <option value="name_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "name_desc")">Sort By: Name (Z-A)</option>
                    <option value="floor" selected="@(ViewData["CurrentSort"]?.ToString() == "floor")">Sort By: Floor</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-dark rounded-0 w-100 fw-bold text-uppercase">Apply</button>
            </div>
        </form>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        @foreach (var item in Model) {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm bg-light rounded-0">
                    <div style="height: 250px; overflow: hidden;">
                        @if (!string.IsNullOrEmpty(item.ImageUrl)) { <img src="@item.ImageUrl" class="w-100 h-100" style="object-fit: cover;"> }
                        else { <div class="bg-secondary h-100 d-flex align-items-center justify-content-center text-white">No Image</div> }
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between">
                            <h5 class="fw-bold text-uppercase">@item.Name</h5>
                            <span class="badge bg-dark rounded-0">FLR @item.Floor</span>
                        </div>
                        <p class="text-muted small" style="height: 4.5em; overflow: hidden;">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-dark fw-bold text-decoration-none small text-uppercase">View Details</a>
                            @if (User.IsInRole("Admin")) {
                                <div>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-secondary me-2"><i class="bi bi-pencil"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger"><i class="bi bi-trash"></i></a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @{
        var currentPage = (int)(ViewBag.CurrentPage ?? 1);
        var totalPages = (int)(ViewBag.TotalPages ?? 1);
        var prevDisabled = currentPage <= 1 ? "disabled" : "";
        var nextDisabled = currentPage >= totalPages ? "disabled" : "";
    }

    @if (totalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @prevDisabled">
                    <a class="page-link rounded-0 border-dark text-dark" 
                       asp-action="Index" 
                       asp-route-page="@(currentPage - 1)" 
                       asp-route-sortOrder="@ViewData["CurrentSort"]">Previous</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link border-dark @(i == currentPage ? "bg-dark border-dark text-white" : "text-dark")" 
                           asp-action="Index" 
                           asp-route-page="@i"
                           asp-route-sortOrder="@ViewData["CurrentSort"]">@i</a>
                    </li>
                }

                <li class="page-item @nextDisabled">
                    <a class="page-link rounded-0 border-dark text-dark" 
                       asp-action="Index" 
                       asp-route-page="@(currentPage + 1)"
                       asp-route-sortOrder="@ViewData["CurrentSort"]">Next</a>
                </li>
            </ul>
        </nav>
    }
    </div>