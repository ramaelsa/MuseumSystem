@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "User Management";
    var userRoles = ViewBag.UserRoles as Dictionary<string, IList<string>>;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-uppercase" style="letter-spacing: 2px;">User Access Control</h1>
            <p class="text-muted small">Total Members: @Model.Count()</p>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th class="ps-4">Email / Username</th>
                    <th>Current Permissions</th>
                    <th class="text-end pe-4">Manage Access</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="ps-4">
                            <div class="fw-bold">@user.Email</div>
                        </td>
                        <td>
                            @if (userRoles != null && userRoles.ContainsKey(user.Id))
                            {
                                foreach (var role in userRoles[user.Id])
                                {
                                    <span class="badge @(role == "Admin" ? "bg-danger" : "bg-primary") rounded-pill">@role</span>
                                }
                            }
                        </td>
                        <td class="text-end pe-4">
                            @if (user.Email != "admin@gmail.com")
                            {
                                <form asp-action="ToggleAdmin" asp-route-id="@user.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-dark">
                                        <i class="bi bi-person-badge me-1"></i> Toggle Admin
                                    </button>
                                </form>

                                <form asp-action="Delete" asp-route-id="@user.Id" method="post" 
                                      onsubmit="return confirm('Delete user?');" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger border-0">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span class="badge bg-light text-dark border">System Protected</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>