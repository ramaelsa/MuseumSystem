@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "User Management";
    var userRoles = ViewBag.UserRoles as Dictionary<string, IList<string>>;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <div>
            <h1 class="fw-bold text-uppercase m-0">User Control</h1>
            <p class="text-muted small">Manage institutional access levels and account security</p>
        </div>
        <span class="badge bg-dark rounded-0 px-3 py-2">System Administrator</span>
    </div>

    <div class="card shadow-sm border-0 rounded-0 border-top border-dark border-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr class="small text-uppercase fw-bold">
                        <th class="py-3">Account Email</th>
                        <th class="py-3 text-center">Current Role</th>
                        <th class="py-3 text-end">Institutional Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        var roles = userRoles != null && userRoles.ContainsKey(user.Id) ? userRoles[user.Id] : new List<string>();
                        bool isMasterAdmin = user.Email == "admin@gmail.com";
                        
                        <tr>
                            <td>
                                <div class="fw-bold">@user.Email</div>
                                <div class="text-muted" style="font-size: 0.7rem;">ID: @user.Id</div>
                            </td>
                            <td class="text-center">
                                @foreach (var role in roles)
                                {
                                    <span class="badge @(role == "Admin" ? "bg-danger" : "bg-secondary") rounded-0 text-uppercase" style="font-size: 0.7rem;">
                                        @role
                                    </span>
                                }
                            </td>
                            <td class="text-end">
                                @if (!isMasterAdmin)
                                {
                                    <div class="d-flex justify-content-end gap-2">
                                        <form asp-action="ToggleAdmin" asp-route-id="@user.Id" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-dark rounded-0 px-3">
                                                <i class="bi bi-arrow-left-right me-1"></i> TOGGLE ROLE
                                            </button>
                                        </form>

                                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" onsubmit="return confirm('PERMANENTLY DELETE USER?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger rounded-0 px-3">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small text-uppercase fw-bold"><i class="bi bi-lock-fill me-1"></i> System Protected</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>