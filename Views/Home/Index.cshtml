@{
    ViewData["Title"] = "Welcome to Museum Core";
}

@if (User.IsInRole("Admin"))
{
    <div class="container mt-5">
        <div class="mb-5 border-bottom pb-3 d-flex justify-content-between align-items-end">
            <div>
                <h1 class="fw-bold text-uppercase letter-spacing-2 m-0">Institutional Dashboard</h1>
                <p class="text-muted small">System integrity and archive overview</p>
            </div>
            <div class="pb-2">
                <span class="badge bg-dark rounded-0 px-3">ADMIN COMMAND</span>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card rounded-0 border-dark shadow-sm">
                    <div class="card-body py-4 text-center">
                        <h6 class="text-uppercase text-muted small fw-bold">Total Archive Size</h6>
                        <h2 class="display-5 fw-bold">@ViewBag.TotalTickets</h2>
                        <a asp-controller="Tickets" asp-action="Index" class="btn btn-sm btn-outline-dark rounded-0 mt-2">MANAGE TICKETS</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card rounded-0 border-dark shadow-sm bg-dark text-white text-center">
                    <div class="card-body py-4">
                        <h6 class="text-uppercase text-gold small fw-bold" style="color: #b2945e;">Total Revenue</h6>
                        <h2 class="display-5 fw-bold">@ViewBag.TotalRevenue.ToString("C")</h2>
                        <div class="small text-muted mt-2">Institutional Earnings</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card rounded-0 border-dark shadow-sm text-center">
                    <div class="card-body py-4">
                        <h6 class="text-uppercase text-muted small fw-bold">Active Personnel</h6>
                        <h2 class="display-5 fw-bold">@ViewBag.TotalUsers</h2>
                        <a asp-controller="Users" asp-action="Index" class="btn btn-sm btn-outline-dark rounded-0 mt-2">MANAGE USERS</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <h5 class="fw-bold text-uppercase mb-4 border-bottom pb-2">Recent Security Activity</h5>
                <div class="list-group rounded-0 shadow-sm mb-3">
                    @foreach (var log in (IEnumerable<MuseumSystem.Models.AuditLog>)ViewBag.RecentLogs)
                    {
                        <div class="list-group-item border-start-0 border-end-0 py-3">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1 fw-bold">@log.Action</h6>
                                <small class="text-muted font-monospace">@log.DateTime.ToString("MMM dd, HH:mm")</small>
                            </div>
                            <p class="mb-1 small text-secondary">@log.Details</p>
                        </div>
                    }
                </div>
                <a asp-controller="AuditLogs" asp-action="Index" class="btn btn-sm btn-link text-dark text-decoration-none p-0 fw-bold">VIEW SYSTEM LOGS →</a>
            </div>
            <div class="col-md-4">
                <div class="bg-light p-4 border h-100">
                    <h5 class="fw-bold text-uppercase mb-3">Quick Actions</h5>
                    <div class="d-grid gap-2">
                        <a asp-controller="Tickets" asp-action="Index" class="btn btn-dark rounded-0 text-start px-3">
                             <i class="bi bi-tag me-2"></i> Update Global Price
                        </a>
                        <a asp-controller="Artists" asp-action="Index" class="btn btn-outline-dark rounded-0 text-start px-3">
                             <i class="bi bi-palette me-2"></i> Review Artist List
                        </a>
                        <a asp-controller="Exhibits" asp-action="Index" class="btn btn-outline-dark rounded-0 text-start px-3">
                             <i class="bi bi-bank me-2"></i> Manage Exhibits
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container py-5 mt-5">
        <div class="row align-items-center">
            <div class="col-lg-6 text-center text-lg-start mb-5 mb-lg-0">
                <h1 class="display-2 fw-bold text-uppercase letter-spacing-5 mb-0">MUSEUM</h1>
                <h1 class="display-4 fw-light text-uppercase letter-spacing-5 mb-4" style="color: var(--museum-gold);">CORE</h1>
                <p class="lead font-serif italic text-muted mb-5 pe-lg-5">
                    Welcome to the digital heart of our collection. Explore timeless masterpieces, 
                    track historical exhibits, and secure your place in art history.
                </p>
                <div class="d-flex gap-3 justify-content-center justify-content-lg-start">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-dark rounded-0 px-5 py-3 fw-bold text-uppercase">Member Login</a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-dark rounded-0 px-5 py-3 fw-bold text-uppercase">Join Membership</a>
                    }
                    else
                    {
                        <a asp-controller="Tickets" asp-action="Index" class="btn btn-dark rounded-0 px-5 py-3 fw-bold text-uppercase">Access My Tickets</a>
                        <a asp-controller="Exhibits" asp-action="Index" class="btn btn-outline-dark rounded-0 px-5 py-3 fw-bold text-uppercase">View Exhibits</a>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="bg-light p-5 border border-dark text-center shadow">
                    <i class="bi bi-bank" style="font-size: 4rem;"></i>
                    <h4 class="fw-bold text-uppercase mt-3 mb-0">Today's Entry</h4>
                    <p class="text-muted small mb-4">Institutional Access Rate</p>
                    <hr class="mx-5" />
                    <p class="display-6 fw-bold">Live Rates</p>
                    <a asp-controller="Tickets" asp-action="Create" class="btn btn-dark rounded-0 px-4 mt-2">RESERVE A VISIT</a>
                </div>
            </div>
        </div>
    </div>
}