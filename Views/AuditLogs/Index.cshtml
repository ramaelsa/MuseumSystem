@model IEnumerable<MuseumSystem.Models.AuditLog>

@{
    ViewData["Title"] = "System Audit Logs";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-uppercase letter-spacing-2">
           Security Logs
        </h1>
        <span class="badge bg-dark rounded-0 px-3 py-2">ADMINISTRATIVE ACCESS ONLY</span>
    </div>

    <div class="card shadow-sm border-0 rounded-0 border-top border-dark border-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr class="small text-uppercase">
                        <th class="py-3">Timestamp</th>
                        <th class="py-3">Administrator</th>
                        <th class="py-3">Action Type</th>
                        <th class="py-3">Affected Entity</th>
                        <th class="py-3">Full Details</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-nowrap font-monospace small">@item.DateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td class="text-muted small">@item.UserId</td>
                        <td>
                            @{
                                var badgeClass = item.Action switch
                                {
                                    "Delete" => "bg-danger",
                                    "Admin Correction" => "bg-warning text-dark",
                                    "Price Update" => "bg-success",
                                    _ => "bg-primary"
                                };
                            }
                            <span class="badge @badgeClass rounded-0 text-uppercase" style="font-size: 0.65rem;">
                                @item.Action
                            </span>
                        </td>
                        <td class="fw-bold small">@item.EntityName</td>
                        <td class="small text-secondary">@item.Details</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>