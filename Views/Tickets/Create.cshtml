@model MuseumSystem.Models.Ticket

@{
    ViewData["Title"] = "Book Ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post" class="bg-white p-4 border shadow-sm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                
                <div class="mb-4">
                    <label asp-for="VisitorName" class="form-label small fw-bold text-uppercase"></label>
                    <input asp-for="VisitorName" class="form-control rounded-0" />
                    <span asp-validation-for="VisitorName" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="VisitDate" class="form-label small fw-bold text-uppercase"></label>
                    <input asp-for="VisitDate" type="date" class="form-control rounded-0" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="VisitDate" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label small fw-bold text-uppercase">Ticket Price (Fixed)</label>
                    <div class="h4 text-dark font-monospace">$@ViewBag.CurrentPrice</div>
                    <input type="hidden" name="Price" value="@ViewBag.CurrentPrice" />
                </div>

                <button type="submit" class="btn btn-dark w-100 rounded-0 py-3 fw-bold">CONFIRM RESERVATION</button>
            </form>
        </div>
    </div>
</div>