@model MuseumSystem.Models.Ticket

@{
    ViewData["Title"] = "Book Ticket";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-5">
                <h2 class="fw-bold text-uppercase" style="letter-spacing: 2px;">Ticket Reservation</h2>
                <p class="text-muted small">Please provide your details for the archives.</p>
            </div>

            <form asp-action="Create" class="bg-white p-4 border shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                
                <div class="mb-4">
                    <label asp-for="VisitorName" class="form-label small fw-bold text-uppercase">Full Name</label>
                    <input asp-for="VisitorName" class="form-control rounded-0" placeholder="e.g. John Doe" />
                    <span asp-validation-for="VisitorName" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="VisitDate" class="form-label small fw-bold text-uppercase">Desired Visit Date</label>
                    <input asp-for="VisitDate" type="date" class="form-control rounded-0" />
                    <span asp-validation-for="VisitDate" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Price" class="form-label small fw-bold text-uppercase">Contribution Amount ($)</label>
                    <input asp-for="Price" class="form-control rounded-0" value="25.00" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-dark w-100 rounded-0 py-3 fw-bold text-uppercase">Confirm Purchase</button>
                
                <div class="text-center mt-4">
                    <a asp-action="Index" class="text-muted small text-decoration-none">Cancel and Return</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
