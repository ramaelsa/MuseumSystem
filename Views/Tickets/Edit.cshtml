@model MuseumSystem.Models.Ticket

@{
    ViewData["Title"] = "Correction";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="fw-bold text-uppercase letter-spacing-2 mb-4">Ticket Correction</h2>
            <div class="border p-4 bg-white shadow-sm">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-4 pb-3 border-bottom">
                        <label class="small fw-bold text-muted text-uppercase">Payment Record</label>
                        <div class="fs-4 font-monospace">@Model.Price.ToString("C")</div>
                        <small class="text-danger">Financial data is locked for historical accuracy.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="VisitorName" class="form-label small fw-bold text-uppercase"></label>
                        <input asp-for="VisitorName" class="form-control rounded-0 border-dark" />
                        <span asp-validation-for="VisitorName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="VisitDate" class="form-label small fw-bold text-uppercase"></label>
                        <input asp-for="VisitDate" type="date" class="form-control rounded-0 border-dark" value="@Model.VisitDate.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="VisitDate" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label small fw-bold text-uppercase text-danger">Internal Note / Reason</label>
                        <textarea name="reasonForChange" class="form-control rounded-0 border-dark" rows="3" required placeholder="Describe why this correction is necessary..."></textarea>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-dark rounded-0 py-2 fw-bold">SAVE CORRECTION</button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-0 py-2 fw-bold">DISCARD CHANGES</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>