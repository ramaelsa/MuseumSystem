@model IEnumerable<MuseumSystem.Models.Ticket>

@{
    ViewData["Title"] = "Visitor Information";
}

<div class="container mt-5">
    <div class="row g-5">
        <div class="col-lg-7">
            <h1 class="display-4 fw-bold mb-4">Plan Your Visit</h1>
            <p class="text-muted mb-5">Welcome to the Museum Core Repository.</p>

            <div class="row g-4">
                <div class="col-md-6">
                    <h5 class="fw-bold text-uppercase small">Location</h5>
                    <p class="text-secondary">100 Museum Plaza<br>Art District, NY 10001</p>
                </div>
                <div class="col-md-6">
                    <h5 class="fw-bold text-uppercase small">Hours</h5>
                    <p class="text-secondary">Tue — Sun: 10am – 6pm</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-5">
            <div class="card shadow-sm border-0 rounded-0 p-5 text-center bg-white border">
                <i class="bi bi-ticket-detailed display-1 mb-4 text-dark"></i>
                <h2 class="fw-bold mb-3">Tickets</h2>
                
                @if (User.Identity.IsAuthenticated)
                {
                    <p class="mb-4">Book your next visit below.</p>
                    <a asp-action="Create" class="btn btn-dark rounded-0 w-100 py-3 text-uppercase fw-bold">Book a Ticket</a>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-dark rounded-0 w-100 py-3 text-uppercase fw-bold mb-3">Login to Book</a>
                }
            </div>
        </div>
    </div>
    
    @if (User.Identity.IsAuthenticated)
    {
        <div class="mt-5 pt-5 border-top">
            <h3 class="fw-bold mb-4">@(User.IsInRole("Admin") ? "ADMIN: ALL SALES LOG" : "MY PURCHASE HISTORY")</h3>
            
            @if (!Model.Any())
            {
                <div class="alert alert-light border">You haven't booked any tickets yet.</div>
            }
            else
            {
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Visitor Name</th>
                            <th>Visit Date</th>
                            <th>Price</th>
                            <th class="text-end px-4">Status / Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="fw-bold">@item.VisitorName</td>
                            <td>@item.VisitDate.ToShortDateString()</td>
                            <td>$@item.Price</td>
                            <td class="text-end px-4">
                                <div class="d-flex justify-content-end align-items-center gap-2">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-link text-secondary">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-link text-danger">Void</a>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success text-uppercase mr-2">Confirmed</span>
                                        <form asp-action="Cancel" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to cancel this ticket?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-0 px-2" style="font-size: 0.7rem;">CANCEL</button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
        </div>
    }
</div>