@model IEnumerable<MuseumSystem.Models.Ticket>

@{
    ViewData["Title"] = "Tickets";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <div>
            <h1 class="fw-bold text-uppercase m-0">Ticket Repository</h1>
            <p class="text-muted small">@(User.IsInRole("Admin") ? "Administrative Management Mode" : "Personal Archive")</p>
        </div>
        
        @if (!User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-dark rounded-0 px-4 fw-bold">BOOK NEW TICKET</a>
        }
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="card rounded-0 mb-4 bg-light border-dark shadow-sm">
            <div class="card-body">
                <form asp-action="SetPrice" method="post" class="row align-items-center">
                    @Html.AntiForgeryToken()
                    <div class="col-auto">
                        <label class="fw-bold text-uppercase small"><i class="bi bi-tag-fill me-1"></i> Global Price:</label>
                    </div>
                    <div class="col-auto">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text bg-dark text-white rounded-0 border-dark">$</span>
                            <input type="number" name="newValue" step="0.01" class="form-control rounded-0 border-dark" value="@ViewBag.GlobalPrice" style="width: 100px;" required />
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-sm btn-dark rounded-0 px-3 fw-bold">UPDATE PRICE</button>
                    </div>
                </form>
            </div>
        </div>
    }

    <div class="table-responsive">
        <table class="table align-middle">
            <thead class="table-light">
                <tr class="small text-uppercase fw-bold">
                    <th>Visitor Name</th>
                    <th>Visit Date</th>
                    <th>Price Paid</th>
                    <th class="text-end">Management</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.VisitorName</td>
                        <td>@item.VisitDate.ToShortDateString()</td>
                        <td class="font-monospace">@item.Price.ToString("C")</td>
                        <td class="text-end">
                            <div class="btn-group">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark rounded-0">CORRECT</a>
                                }
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-0">DELETE</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>