@model MuseumSystem.Models.Ticket

@{
    ViewData["Title"] = "Delete Ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete</h1>
    <h3>Are you sure you want to delete this reservation?</h3>
    <hr />
    
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.VisitorName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.VisitorName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.VisitDate)</dt>
                <dd class="col-sm-9">@Model.VisitDate.ToShortDateString()</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
                <dd class="col-sm-9">$@Html.DisplayFor(model => model.Price)</dd>
            </dl>

            <form asp-controller="Tickets" asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
            </form>
        </div>
    </div>
</div>