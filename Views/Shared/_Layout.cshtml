<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Museum Archive</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --museum-black: #121212;
            --museum-gold: #b2945e;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            font-family: 'Georgia', serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #ffffff;
        }

        .navbar {
            background-color: white !important;
            border-bottom: 2px solid var(--museum-black);
            padding: 1.2rem 0;
            flex-shrink: 0;
        }

        .content-wrapper {
            flex: 1 0 auto;
            padding-bottom: 3rem;
        }

        footer {
            flex-shrink: 0;
            background-color: var(--museum-black);
            color: #999 !important;
            padding: 3rem 0;
            font-family: 'Arial', sans-serif;
            font-size: 0.75rem;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .navbar-brand {
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 3px;
            color: var(--museum-black) !important;
        }

        .nav-link {
            font-family: 'Arial', sans-serif;
            font-size: 0.8rem;
            font-weight: 700;
            text-transform: uppercase;
            color: #555 !important;
            margin: 0 10px;
        }

        .nav-link:hover {
            color: var(--museum-gold) !important;
        }

        .nav-link.admin-link {
            color: #dc3545 !important;
        }

        .footer-divider {
            height: 1px;
            background: #333;
            margin: 1.5rem 0;
        }

        footer a {
            color: #ccc;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">MUSEUM<span style="font-weight:300;">CORE</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Archive</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Artists" asp-action="Index">Artists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Exhibits" asp-action="Index">Exhibits</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tickets" asp-action="Index">Tickets</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link admin-link" asp-controller="Users" asp-action="Index">
                                    <i class="bi bi-people-fill me-1"></i> Users
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-primary" asp-controller="Tickets" asp-action="SetPrice">
                                    <i class="bi bi-currency-dollar"></i> Pricing
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="AuditLogs" asp-action="Index">
                                    <i class="bi bi-list-check"></i> Logs
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="content-wrapper">
        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer>
        <div class="container text-center">
            <div class="row align-items-center">
                <div class="col-md-6 text-md-start">&copy; 2026 MUSEUM CORE REPOSITORY</div>
                <div class="col-md-6 text-md-end">
                    <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    <span class="mx-2">|</span> Institutional Access Only
                </div>
            </div>
            <div class="footer-divider"></div>
            <div style="opacity: 0.5;">Digital Management System for Fine Arts</div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>