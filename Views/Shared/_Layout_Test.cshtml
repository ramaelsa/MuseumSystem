<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Museum Core</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site-test.css" />
</head>

<body class="museum-body">

    <header>
        <nav class="navbar navbar-expand-lg museum-navbar">
            <div class="container">
                <a class="navbar-brand museum-logo" asp-controller="Home" asp-action="Index">
                    Museum<span>Core</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Archive</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Artists" asp-action="Index">Artists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Exhibits" asp-action="Index">Exhibits</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tickets" asp-action="Index">Tickets</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link admin-link" asp-controller="Users" asp-action="Index">
                                <i class="bi bi-shield-lock-fill"></i> Admin
                            </a>
                        </li>
                    }
                    </ul>

                    <div class="d-flex">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-5">
        @RenderBody()
    </main>

    <footer class="museum-footer">
        <div class="container text-center">
            <p class="mb-1">&copy; 2026 Museum Core Repository</p>
            <small>Digital Archive Management System</small>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>